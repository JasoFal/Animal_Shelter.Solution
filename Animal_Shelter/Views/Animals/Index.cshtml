@{
  Layout = "_Layout";
}

@using Animal_Shelter.Models;

<h1>Animals for Adoption</h1>


@Html.ActionLink("Sort By: Type", "Index", new { sortRule = "Type"})
<br>
@Html.ActionLink("Sort By: Breed", "Index", new { sortRule = "Breed"})
<br>
@Html.ActionLink("Sort By: DOA", "Index", new { sortRule = "DOA"})

@if (@Model.Count == 0)
{
  <h3>No animals are currently up for adoption</h3>
}

<ul>
  @foreach(Animal animal in Model)
  {
    <li>@Html.ActionLink($"{animal.Name}", "Details", new { id = animal.AnimalId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new animal", "Create")</p>